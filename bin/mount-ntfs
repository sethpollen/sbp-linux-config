#!/bin/sh
# Script to mount an external NTFS hard drive. This script assumes that the
# drive is /dev/sdb1. This script takes one command-line argument: the name
# to use for mounting the driver under /media.

if [ $# -lt 1 ]; then
  echo "Please supply the name to use for mounting under /media."
  exit 1
fi

MOUNT_POINT=/media/$1
if [ -d "$MOUNT_POINT" ]; then
  echo "$MOUNT_POINT already exists; please delete it."
  exit 2
fi

sudo mkdir $MOUNT_POINT
sudo mount -t ntfs /dev/sdb1 $MOUNT_POINT
