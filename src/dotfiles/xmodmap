! Ensure that the Ctrl keys on the Kinesis keyboard (which map to Super_R and
! Super_L) are interpreted by X as control modifiers.
remove mod4 = Super_L
remove mod4 = Super_R
add control = Super_L
add control = Super_R

! Swap caps lock and escape
remove Lock = Caps_Lock
keysym Escape = Caps_Lock
keysym Caps_Lock = Escape
add Lock = Caps_Lock
